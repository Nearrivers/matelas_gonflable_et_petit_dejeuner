<p id="notice"><%= notice %></p>

<h1>Location Appliances</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Appliance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_appliances.each do |location_appliance| %>
      <tr>
        <td><%= location_appliance.location_id %></td>
        <td><%= location_appliance.appliance_id %></td>
        <td><%= link_to 'Show', location_appliance %></td>
        <td><%= link_to 'Edit', edit_location_appliance_path(location_appliance) %></td>
        <td><%= link_to 'Destroy', location_appliance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

