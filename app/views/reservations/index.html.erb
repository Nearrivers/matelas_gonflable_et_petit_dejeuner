<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>User</th>
      <th>Date in</th>
      <th>Date out</th>
      <th>Nbpeople</th>
      <th>Strip reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.location %></td>
        <td><%= reservation.user %></td>
        <td><%= reservation.date_in %></td>
        <td><%= reservation.date_out %></td>
        <td><%= reservation.nbPeople %></td>
        <td><%= reservation.strip_reference %></td>
        <td><%= link_to 'Voir', reservation %></td>
        <td><%= link_to 'Editer', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

