<div class="searchbar-section">
  <form action="location_criterias" method="GET">
    <div class="searchbar">
      <div class="searchbar-item address-picker">
        <div class="item-label">Destination</div>
        <input name="where" id="where" type="text" class="item-label" placeholder="Où allez-vous ?" required/>
      </div>
      <div class="separator"></div>
      <div class="dates-pickers">
        <div class="searchbar-item arrival-picker">
          <div class="item-label">Arrivée</div>
          <div class="item-label"><input type="date" class="datepicker-input" id="arrivee" name="arrivee" required></div>
        </div>
        <div class="separator"></div>
        <div class="searchbar-item departure-picker">
          <div class="item-label">Départ</div>
          <div class="item-label"><input type="date" class="datepicker-input" id="depart" name="depart" required></div>
        </div>
      </div>
      <div class="separator"></div>
      <div class="travelers-picker">
        <div class="searchbar-item">
          <div class="item-label">Voyageurs</div>
          <div class="item-label"><input type="number" id="travelers" name="travelers" placeholder = "Combien ?" required min="0"></div>
        </div>
        <div class="search-glass">
          <button type="submit" class="search-button">
            <div class="magnifying-glass">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-search"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>
